@model Entities.Category

@{
    ViewData["Title"] = "Edit";
}

<h1>Dəyişmək</h1>

<h4>Kateqoriya</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CategoryName" class="control-label"></label>
                <input asp-for="CategoryName" class="form-control" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
            
            <div class="oldIcon">
                <dt>
                <label  asp-for="CategoryIcon" class="control-label">Old Icon :</label>
                </dt>
                <i class="@Model.CategoryIcon fa-2x"></i> 
            </div>

              <div class="catIcon">
                <i class="fas fa-laptop"></i>
                <i class="fas fa-mobile-alt"></i>
                <i class="fas fa-network-wired"></i>
                <i class="fas fa-wifi"></i>
                <i class="fab fa-apple"></i>
                <i class="fas fa-broadcast-tower"></i>
             </div>
             <input type="hidden" asp-for="CategoryIcon"/>
            <input type="hidden" asp-for="ID"/>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-primary" asp-action="Index">Back to List</a>
</div>
@section Scripts{
   <script>
       $(".catIcon i").click(function(){
           $(".catIcon i").removeClass("active-icon")  
          const iconCat= $(this).attr("class")
            $(this).addClass("active-icon")
           $("#CategoryIcon").val(iconCat)
          const oldIcon= $(".oldIcon i").attr("class")
           $(".oldIcon i").removeClass(oldIcon)
           $(".oldIcon i").addClass(iconCat+" "+"fa-2x")


       })
   </script>
}