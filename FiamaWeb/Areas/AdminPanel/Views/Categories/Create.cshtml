@model Entities.Category

@{
    ViewData["Title"] = "Create";
}




<h1>New Product</h1>

<h4>Category</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CategoryName" class="control-label"></label>
                <input asp-for="CategoryName" class="form-control" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>

            <input type="hidden" asp-for="CategoryIcon" class="form-control" />

            <div class="catIcon">
           <i class="fa-brands fa-padlet"></i>
           <i class="fa-brands fa-pix"></i>
            <i class="fa-solid fa-clover"></i>
            <i class="fa-solid fa-virus-covid"></i>
            <i class="fa-solid fa-bug-slash"></i>
            </div>
          
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-info" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn-primary" asp-action="Index">Back to List</a>
</div>
@section Scripts{
<script>
    $(".catIcon i").click(function(){
        $(".catIcon i").removeClass("active-icon")
       const iconCat= $(this).attr("class")
         $(this).addClass("active-icon")
        $("#CategoryIcon").val(iconCat)
    })
</script>
}
